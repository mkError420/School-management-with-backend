  //model Result {}

  //model Attendance {}

  //model Event {}

  //model Announcement {}



enum UserSex{
  MALE
  FEMALE
}


enum Day{
    SUNDAY
    MONDAY
    TUESDAY
    WEDNESDAY
    THURSDAY
}